{
  "pluginAlias": "JvcDlaAccessory",
  "pluginType": "accessory",
  "singular": false,
  "schema": {
    "type": "object",
    "required": [
      "name",
      "host"
    ],
    "additionalProperties": true,
    "properties": {
      "name": {
        "type": "string",
        "description": "Name of the accessory instance."
      },
      "host": {
        "type": "string",
        "description": "Projector host name or IP address."
      },
      "password": {
        "type": "string",
        "description": "Projector password [8-16 characters] (2021 and newer models)."
      }
    }
  }
}
